<style>
    #notifi{
text-align: left;
font-size: 17px;
margin-top: 5px;
z-index: 100;
padding: 5px;
border-radius: 5px;
color: #ffffff;
background-color: #ffca18;
border-color: #ffca18;
position: absolute; 
top: 10%;
display: none;
    }
    #erreur
    {
text-align: left;
font-size: 17px;
margin-top: 5px;
z-index: 100;
padding: 5px;
border-radius: 5px;
color: #ffffff;
background-color: #f30808;
border-color:  #f30808;
position: absolute; 
top: 10%;
display: block;
    }
    .error
        {
            color: red;
        }
</style>
</head>

<body>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <div id="login-page">
    <div class="container">
      <div class="row">
        
        <% if(typeof erreurmotpasse !== "undefined"){ %>
          <div id="notifi" class="col-lg-offset-3   col-md-offset-4 col-sm-11 col-xs-12 col-md-6 col-lg-4 ">
            <h2><%= erreurmotpasse %></h2>
          </div>
          
          <% } %>
          <% if(typeof erreurnumero !== "undefined"){ %>
            <div id="erreur" class="col-lg-offset-3   col-md-offset-4 col-sm-11 col-xs-12 col-md-6 col-lg-4 ">
              <h2><%= erreurnumero %></h2>
            </div>
            <% } %>
          </div>
      <form class="form-login" method="post" id="signupForm" action="/Superadmin/connection">
        <h2 class="form-login-heading">se connecter maintenant</h2>
        <div class="login-wrap">
          <input type="tel" name="telephone" id="telephone" class="form-control" placeholder="Entrez votre numéro de téléphone" autofocus>
          <br>
          <input type="password" name="motdepasse" id="motdepasse" class="form-control mt-5" placeholder=" Entrez votre Mot de passe"><br>
          
          <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> SE CONNECTER</button>
          <hr>
         
          <div class="registration">
            Vous n'avez pas encore de compte?<br/>
            <a class="" href="/Superadmin/creationcompte">
              Créer un compte!
              </a>
          </div>
        </div>
        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Mot de passe oublié ?</h4>
              </div>
              <div class="modal-body">
                <p>Entrez votre adresse e-mail pour réinitialiser votre mot de passe.</p>
                <input type="text" name="email" placeholder="E-mail" autocomplete="off" class="form-control placeholder-no-fix">
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Annuler</button>
                <button class="btn btn-theme" type="button">Soumettre</button>
              </div>
            </div>
          </div>
        </div>
        <!-- modal -->
      </form>
    </div>
  </div>
  <!-- js placed at the end of the document so the pages load faster -->
  <script src="/assets/semantic/lib/jquery/jquery.min.js"></script>
  <script src="/assets/semantic/lib/bootstrap/js/bootstrap.min.js"></script>
  <!--BACKSTRETCH-->
  <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
  <script type="text/javascript" src="/assets/semantic/lib/jquery.backstretch.min.js"></script>
  <script src="/assets/semantic/lib/jquery.validate.js"></script>
  <script>
 
  
    $().ready(function() {
      // validate the comment form when it is submitted
      jQuery.validator.addMethod("phoneGuinee", function (phone_number, element) {
        phone_number = phone_number.replace(/\s+/g, "");
        return this.optional(element) || phone_number.length >= 9 && phone_number.match(/^6[1,2,5,6]{1}[0-9]{7}$/);
    }, "Veuillez Entrez le bon format de Numero");
      // validate signup form on keyup and submit
      $("#signupForm").validate({
        rules: {
          motdepasse: {
            required: true,
            minlength: 5
          },
          telephone: {
                    required: true,
                    phoneGuinee: true
                }
        },
        messages: {
          motdepasse: {
            required: "Veuillez fournir un mot de passe",
            minlength: "Votre mot de passe doit comporter au moins 5 caractères"
          },
          telephone: {
            required: "Veuillez fournir un numéro de téléphone"
          }
        }
      });
  
  
      //code to hide topic selection, disable for demo
      var newsletter = $("#newsletter");
      // newsletter topics are optional, hide at first
      var inital = newsletter.is(":checked");
      var topics = $("#newsletter_topics")[inital ? "removeClass" : "addClass"]("gray");
      var topicInputs = topics.find("input").attr("disabled", !inital);
      // show when newsletter is checked
      newsletter.click(function() {
        topics[this.checked ? "removeClass" : "addClass"]("gray");
        topicInputs.attr("disabled", !this.checked);
      });
    });
    </script>
  <script>
    $.backstretch("/assets/semantic/img/login-bg.jpg", {
      speed: 500
    });
  </script>
   <script>

    '<% if(typeof erreurmotpasse !== "undefined"){ %>'
    $("#notifi").css({ 
      display: 'block'
    });
    setTimeout(function () {
    $("#notifi").css({ 
      display: 'none'
    });
    }, 5000)
    '<% } %> '
    '<% if(typeof erreurnumero!== "undefined"){ %>'
    $("#erreur").css({ 
      display: 'block'
    });
    setTimeout(function () {
    $("#erreur").css({ 
      display: 'none'
    });
    }, 5000)
    '<% } %> '
    </script>
</body>

</html>
